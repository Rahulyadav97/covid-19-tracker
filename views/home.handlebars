<div class="row">

                        <!-- Area Chart -->
                        <div class="col-xl-12 col-lg-12">
                            <div class="card shadow mb-4" id="table-card">                               
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-info">Confirmed Cases and Deaths by Country</h6>
                                    
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                <div class="table-responsive">
  <table id="country-detail" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Flag</th>
      <th>Country</th>
      <th>Cases</th>
      <th>Deaths</th>
      <th>Active Cases</th>
      <th>New Deaths</th>
      <th>Critical</th>
      <th>Recovered</th>
    </tr>
    </thead>
    <tbody>
{{#each info}}
<tr>
 <td>
<img class="center" width="30px" src="{{this.countryInfo.flag}}"  />
 </td>
   <td>
<h4 >{{this.country}}</h4>
</td>
<td>
  {{this.cases}}
</td>
<td>
   {{this.deaths}}
</td>
<td>
   {{this.active}}
</td>
<td>
   {{this.todayDeaths}}
</td>
<td>
   {{this.critical}}
</td>
<td>
   {{this.recovered}}
</td>
</tr>

{{/each}}
</tbody>
</table>
