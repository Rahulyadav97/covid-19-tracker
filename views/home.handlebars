                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">New Cases</div>
                                            <div class="row no-gutters align-items-center">
                                            <div class="col-auto">
                                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{data.todayCases}}</div>
                                                </div>
                                                                                                
                                            </div>
                                        </div>
